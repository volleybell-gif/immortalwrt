# 目标平台
CONFIG_TARGET_ath79=y
CONFIG_TARGET_ath79_generic=y
CONFIG_TARGET_ATH79_SINGLE_IMAGE=y

# 设备型号（可选，可以用generic）
CONFIG_TARGET_ath79_generic_DEVICE_generic=y

# 文件系统
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_ROOTFS_PARTSIZE=48

# 内核模块 - 最小集
CONFIG_PACKAGE_kmod-ath9k=y
CONFIG_PACKAGE_kmod-ath9k-common=y
CONFIG_PACKAGE_kmod-ath9k-htc=y

# USB支持
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y

# 网络基础
CONFIG_PACKAGE_dnsmasq=y
# CONFIG_PACKAGE_dnsmasq-dhcpv6 is not set
# CONFIG_PACKAGE_dnsmasq-full is not set

CONFIG_PACKAGE_firewall=y
CONFIG_PACKAGE_odhcpd=y
# CONFIG_PACKAGE_odhcpd-ipv6only is not set

# 无线
CONFIG_PACKAGE_wpad-basic-wolfssl=y
CONFIG_PACKAGE_iw=y

# 系统核心
CONFIG_PACKAGE_uci=y
CONFIG_PACKAGE_ubus=y
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_opkg=y

# Busybox - 最小化
CONFIG_BUSYBOX_CONFIG_FEATURE_EDITING=n
CONFIG_BUSYBOX_CONFIG_HUSH=n

# 小闪存优化
CONFIG_SMALL_FLASH=y

# 确保禁用所有可能引起冲突的包
# CONFIG_PACKAGE_luci is not set
# CONFIG_PACKAGE_uhttpd is not set
# CONFIG_PACKAGE_ip6tables is not set
# CONFIG_PACKAGE_ppp is not set
# CONFIG_PACKAGE_ppp-mod-pppoe is not set
