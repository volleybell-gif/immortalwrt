config interface 'loopback'
    option device 'lo'
    option proto 'static'
    option ipaddr '127.0.0.1'
    option netmask '255.0.0.0'

config device
    option name 'br-lan'
    option type 'bridge'
    list ports 'eth0'  # 将唯一的以太网口 eth0 桥接到 LAN

config interface 'lan'
    option device 'br-lan'
    option proto 'static'
    option ipaddr '192.168.1.1'  # 设置管理地址[citation:5]
    option netmask '255.255.255.0'
    option ip6assign '60'
