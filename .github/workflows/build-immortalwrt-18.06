
name: Build ImmortalWrt 18.06 for TL-WR902AC v1

on:
  push:
    branches: [ main, master ]
  workflow_dispatch:
    inputs:
      clean_build:
        description: '执行完整清理编译'
        required: false
        default: false

env:
  FIRMWARE_NAME: immortalwrt-18.06-tl-wr902ac-v1
  DEVICE_NAME: tplink_tl-wr902ac-v1
  TARGET: ar71xx
  SUBTARGET: tiny

jobs:
  build:
    runs-on: ubuntu-20.04
    
    steps:
    - name: Checkout repository
      uses: actions/checkout@v4
      
    - name: Setup build environment
      run: |
        sudo apt-get update
        sudo apt-get install -y build-essential ccache curl git libncurses5-dev \
        libssl-dev python3 python3-dev meson gperf help2man unzip rsync
        sudo apt-get clean
        
    - name: Clone ImmortalWrt 18.06 source
      run: |
        git clone https://github.com/immortalwrt/immortalwrt.git -b openwrt-18.06 openwrt
        cd openwrt
        
    - name: Update feeds
      working-directory: ./openwrt
      run: |
        ./scripts/feeds update -a
        ./scripts/feeds install -a
        
    - name: Configure for TL-WR902AC v1 (16MB)
      working-directory: ./openwrt
      run: |
        # 设置目标平台
        echo "CONFIG_TARGET_ar71xx=y" > .config
        echo "CONFIG_TARGET_ar71xx_tiny=y" >> .config
        echo "CONFIG_TARGET_ar71xx_tiny_DEVICE_tplink_tl-wr902ac-v1=y" >> .config
        
        # 文件系统配置 - 确保生成squashfs-sysupgrade
        echo "CONFIG_TARGET_ROOTFS_SQUASHFS=y" >> .config
        echo "CONFIG_TARGET_ROOTFS_EXT4FS=n" >> .config
        echo "CONFIG_TARGET_ROOTFS_INITRAMFS=n" >> .config
        echo "CONFIG_TARGET_ROOTFS_JFFS2=n" >> .config
        echo "CONFIG_TARGET_ROOTFS_PARTSIZE=16" >> .config
        
        # 基础软件包
        echo "CONFIG_PACKAGE_luci=y" >> .config
        echo "CONFIG_PACKAGE_luci-theme-bootstrap=y" >> .config
        echo "CONFIG_PACKAGE_luci-ssl=y" >> .config
        echo "CONFIG_PACKAGE_dnsmasq=y" >> .config
        echo "CONFIG_PACKAGE_firewall=y" >> .config
        
        # 16MB专用优化
        echo "CONFIG_PACKAGE_luci-app-ddns=n" >> .config
        echo "CONFIG_PACKAGE_luci-app-upnp=n" >> .config
        echo "CONFIG_PACKAGE_samba4-server=n" >> .config
        echo "CONFIG_PACKAGE_minidlna=n" >> .config
        echo "CONFIG_PACKAGE_transmission-daemon=n" >> .config
        
        # 启用压缩
        echo "CONFIG_TARGET_IMAGES_GZIP=y" >> .config
        
    - name: Modify device definition for 16MB
      working-directory: ./openwrt
      run: |
        # 修改设备定义文件以支持16MB闪存
        mkdir -p target/linux/ar71xx/image/
        cat > target/linux/ar71xx/image/tiny-tp-link.mk
